<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.aleix.projectefinal.View_Comanda">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afegir Producte"
        android:id="@+id/btnAfegirProducteComanda"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Productes:"
        android:id="@+id/textView12"
        android:layout_above="@+id/txtNumProductesComanda"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txtNumProductesComanda"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignBaseline="@+id/btnAfegirProducteComanda"
        android:layout_alignBottom="@+id/btnAfegirProducteComanda"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total:"
        android:id="@+id/textView14"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txtTotalComanda"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finaltzar"
        android:id="@+id/btnFinalitzarComanda"
        android:layout_alignTop="@+id/txtTotalComanda"
        android:layout_alignRight="@+id/btnAfegirProducteComanda"
        android:layout_alignEnd="@+id/btnAfegirProducteComanda" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewComanda"
        android:layout_below="@+id/btnAfegirProducteComanda"
        android:layout_alignRight="@+id/btnAfegirProducteComanda"
        android:layout_alignEnd="@+id/btnAfegirProducteComanda"
        android:layout_above="@+id/textView14"
        android:choiceMode="none" />

</RelativeLayout>
