<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.aleix.projectefinal.View_AddClient">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nom"
        android:ems="10"
        android:id="@+id/txtNomAddClient"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtCognomAddClient"
        android:layout_alignStart="@+id/txtCognomAddClient" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Cognom"
        android:ems="10"
        android:id="@+id/txtCognomAddClient"
        android:layout_below="@+id/txtNomAddClient"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom:"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/txtNomAddClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cognom:"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/txtCognomAddClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel.:"
        android:id="@+id/textView5"
        android:layout_below="@+id/txtCognomAddClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtTelAddClient"
        android:layout_below="@+id/txtCognomAddClient"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/textView6"
        android:layout_below="@+id/txtMobilAddClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtEmailAddClient"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/txtTelAddClient"
        android:layout_alignStart="@+id/txtTelAddClient" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtMobilAddClient"
        android:layout_below="@+id/txtTelAddClient"
        android:layout_alignLeft="@+id/txtTelAddClient"
        android:layout_alignStart="@+id/txtTelAddClient" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mòbil"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/txtMobilAddClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrer"
        android:id="@+id/textView8"
        android:layout_below="@+id/txtEmailAddClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCarrerAddClient"
        android:layout_below="@+id/txtEmailAddClient"
        android:layout_alignLeft="@+id/txtEmailAddClient"
        android:layout_alignStart="@+id/txtEmailAddClient"
        android:layout_alignRight="@+id/txtEmailAddClient"
        android:layout_alignEnd="@+id/txtEmailAddClient" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Població"
        android:id="@+id/textView9"
        android:layout_below="@+id/txtCarrerAddClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPoblacioAddClient"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/txtCarrerAddClient"
        android:layout_alignStart="@+id/txtCarrerAddClient"
        android:layout_alignRight="@+id/txtCarrerAddClient"
        android:layout_alignEnd="@+id/txtCarrerAddClient" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtAltresAddClient"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/txtCPAddClient"
        android:layout_alignStart="@+id/txtCPAddClient" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altres"
        android:id="@+id/textView10"
        android:layout_below="@+id/txtCPAddClient"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCPAddClient"
        android:layout_below="@+id/txtPoblacioAddClient"
        android:layout_alignLeft="@+id/txtPoblacioAddClient"
        android:layout_alignStart="@+id/txtPoblacioAddClient"
        android:layout_alignRight="@+id/txtPoblacioAddClient"
        android:layout_alignEnd="@+id/txtPoblacioAddClient" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codi Postal"
        android:id="@+id/textView11"
        android:layout_below="@+id/txtPoblacioAddClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/btnAddClient"
        android:layout_below="@+id/txtAltresAddClient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI"
        android:id="@+id/textView22"
        android:layout_alignTop="@+id/txtDNIAddClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDNIAddClient"
        android:layout_above="@+id/textView3"
        android:layout_toRightOf="@+id/textView11"
        android:layout_alignRight="@+id/btnAddClient"
        android:layout_alignEnd="@+id/btnAddClient" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edat"
        android:id="@+id/textView23"
        android:layout_below="@+id/txtAltresAddClient"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtEdatAddClient"
        android:layout_alignTop="@+id/textView23"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toLeftOf="@+id/btnAddClient"
        android:layout_toStartOf="@+id/btnAddClient" />

</RelativeLayout>